@model Inventory
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MustangFB</title>
</head>


<body class="bgc">
    <h3>@Model.Item Information</h3>
    <table class="table">
        <tr>
            <th>Id</th>
            <th>Item</th>
            <th>Size</th>
            <th>Quantity</th>

        </tr>
        <tr>
            <td>@Model.Id</td>
            <td>@Model.Item</td>
            <td>@Model.Size</td>
            <td>@Model.Quantity</td>
        </tr>

    </table>

    <div style="display: block">
        <a href="/Inventory/UpdateInventory/@Model.Id">Update this Inventory</a>
    </div>

    <div style="display: block">
        @using (Html.BeginForm("DeleteItem", "Inventory", "Post"))
        {
            <input type="hidden" asp-for="Id" value="@Model.Id" />
            <input type="submit" onclick="return confirm('Are you sure?')" value="Delete this product" />
        }
    </div>

</body>
</html>