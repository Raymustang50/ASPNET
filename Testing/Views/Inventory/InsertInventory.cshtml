@model Inventory
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>DragonFB</title>
    </head>
    <body class="bgc">
        <h2>Create a New Item</h2>
        @using (Html.BeginForm("InsertItemToDatabase", "Inventory", "Post"))
        {
            <input asp-for="Item" type="text" value="" />
            <label asp-for="Item" class="control-label">Item</label>

            <input type="text" name="Size" class="form-control" value="" />
            <label asp-for="Size" class="control-label">Size</label>

            <input type="text" name="Quantity" class="form-control" value="" />
            <label asp-for="Quantity" class="control-label">Quantity</label>

            <div>
                <input type="submit" value="Create Item" class="btn btn-primary" />
            </div>
        }
        </body>
        </html>


   
